#!/usr/bin/env sh

case "$(uname -s)" in
Darwin)
    if ! command -v git >/dev/null 2>&1 || ! command -v clang >/dev/null 2>&1; then
        echo "❌ Xcode Command Line Tools not found"
        echo "📋 Please install manually: xcode-select --install"
        echo "🔄 Then re-run this script"
        exit 1
    fi

    SCRIPT_PATH="$(realpath "$BASH_SOURCE")"
    SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"

    "${SCRIPT_DIR}"/install-package-manager.sh
    "${SCRIPT_DIR}"/install-password-manager.sh
    ;;
Linux)
    echo "Bootstrap for Linux is not implemented"
    exit 1
    ;;
*)
    echo "unsupported OS"
    exit 1
    ;;
esac