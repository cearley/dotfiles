{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Source shared utility functions
source "{{ .chezmoi.sourceDir -}}/scripts/script-utils.sh"

# Check required tools
if ! require_tools brew; then
    exit 1
fi

print_message "info" "Installing packages using Homebrew..."

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}

# Always install core packages
{{ range .packages.darwin.core.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.core.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.core.mas -}}
mas {{ . }}
{{ end -}}

{{- if has "dev" .tags }}
# Install dev packages
{{ range .packages.darwin.dev.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.dev.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.dev.mas -}}
mas {{ . }}
{{ end -}}
{{- end }}

{{- if has "ai" .tags }}
# Install AI packages
{{ range .packages.darwin.ai.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.ai.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.ai.mas -}}
mas {{ . }}
{{ end -}}
{{- end }}

{{- if has "work" .tags }}
# Install work packages
{{ range .packages.darwin.work.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.work.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.work.mas -}}
mas {{ . }}
{{ end -}}
{{- end }}

{{- if has "mobile" .tags }}
# Install mobile packages
{{ range .packages.darwin.mobile.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.mobile.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.mobile.mas -}}
mas {{ . }}
{{ end -}}
{{- end }}
EOF

print_message "info" "Installing packages using SDKMAN!..."

if ! command_exists sdk; then
    source "{{- .chezmoi.homeDir -}}/.sdkman/bin/sdkman-init.sh"
fi

{{- if has "dev" .tags }}
# Install dev packages
{{ range .packages.darwin.dev.sdk -}}
sdk install {{ . }}
{{ end -}}
{{- end }}
{{ end -}}