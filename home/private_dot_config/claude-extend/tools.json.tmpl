{{- if has "ai" .tags -}}
{
  "tools": {
    "aws-knowledge-mcp-server": {
      "description": "Access up-to-date information from the web",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://knowledge-mcp.global.api.aws"
      ]
    },
    "basic-memory": {
      "description": "Enhanced memory capabilities for Claude",
      "command": "basic-memory",
      "args": ["mcp"]
    },
    "gemini-cli": {
      "description": "Google Gemini integration tool",
      "command": "npx",
      "args": ["-y", "gemini-mcp-tool"]
    },
    "sequential-thinking": {
      "description": "Dynamic and reflective problem-solving through a structured thinking process",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "description": "Semantic code analysis and intelligent IDE assistant",
      "command": "uvx",
      "args": [
        "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server",
        "--context", "ide", "--project-from-cwd"
      ]
    },
    "serena-claude-jetbrains": {
      "description": "Semantic code analysis and intelligent IDE assistant",
      "command": "uvx",
      "args": [
        "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server",
        "--context", "claude-code", "--project-from-cwd",
        "--language-backend", "JetBrains"
      ]
    },
    "whimsical": {
      "description": "Enables the creation of Whimsical diagrams programmatically",
      "command": "/Users/craig/.nvm/versions/node/v24.7.0/bin/node",
      "args": [
        "/Users/craig/work/whimsical-mcp-server/dist/index.js"
      ]
    },
    "aws-api": {
      "description": "Interact with AWS services programmatically",
      "command": "{{- .chezmoi.homeDir -}}/.local/bin/uvx",
      "args": ["awslabs.aws-api-mcp-server@latest"],
      "env": {
        "AWS_REGION": "us-west-2"
      }
    },
    "aws-knowledge": {
      "description": "Access up-to-date information from the web",
      "command": "{{- .chezmoi.homeDir -}}/.local/bin/uvx",
      "args": ["fastmcp", "run", "https://knowledge-mcp.global.api.aws"]
    },
    "bedrock-agentcore": {
      "description": "Integrate with Amazon Bedrock services",
      "command": "{{- .chezmoi.homeDir -}}/.local/bin/uvx",
      "args": ["awslabs.amazon-bedrock-agentcore-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "strands-agents": {
      "description": "Utilize Strands AI agents for various tasks",
      "command": "{{- .chezmoi.homeDir -}}/.local/bin/uvx",
      "args": ["strands-agents-mcp-server"],
      "env": {
        "FASTMCP_LOG_LEVEL": "INFO"
      },
      "autoApprove": ["search_docs", "fetch_doc"]
    },
    "aws-diagram": {
      "description": "Generate AWS architecture diagrams from text descriptions",
      "command": "{{- .chezmoi.homeDir -}}/.local/bin/uvx",
      "args": [
        "--with",
        "sarif-om,jschema_to_python",
        "awslabs.aws-diagram-mcp-server@latest"
      ]
    }{{ if .has_keepassxc_db }},
    "context7": {
      "description": "Up-to-date, version-specific documentation and code examples",
      "command": "npx",
      "args": [
        "-y", "@upstash/context7-mcp", "--api-key", "{{ keepassxcAttribute "Context7" "API KEY" }}"
      ]
    }{{ end }}
  }
}
{{- end -}}