[user]
	name = {{ .fullname }}
	email = {{ .gh_commit_email }}
	signingkey = {{ .chezmoi.homeDir }}/.ssh/id_ed25519.pub
[credential]
	helper = cache
[gpg]
	format = ssh
[core]
	autocrlf = input
{{- if has "dev" .tags }}
	pager = delta
{{- end }}

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-primary-work

[credential "https://github.com"]
	username = {{ .gh_username }}

{{ if has "dev" .tags -}}
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3
{{- end }}